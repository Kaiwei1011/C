For
#include <stdio.h>
#include <stdlib.h>
double power_for(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_for(x,n)); 

   system("pause");
   return 0;
}
double power_for(double base, int n)   
{
   int i;
   double pow=1.0;
   for(i=1;i<=n;i++)		
      pow=pow*base;
   return pow;
}


while
#include <stdio.h>
#include <stdlib.h>
double power_while(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_while(x,n)); 

   system("pause");
   return 0;
}
double power_while(double base, int n)   
{
   int i=1;
   double pow=1.0;
   while(i<=n)	
{
    pow=pow*base;
    i++;
}
   return pow;
}



do while
#include <stdio.h>
#include <stdlib.h>
double power_dowhile(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_dowhile(x,n)); 

   system("pause");
   return 0;
}
double power_dowhile(double base, int n)   
{
   int i=1;
   double pow=1.0;
   do
{  
   i++;  
   pow=pow*base;
} 
   while(i<=n); 
   return pow;
}



recursion
#include <stdio.h>
#include <stdlib.h>
double power_r(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_r(x,n)); 

   system("pause");
   return 0;
}
double power_r(double base, int n)   
{
   int i=1;
   double pow=1.0;
    return (i<=n);
	i++;
   pow=pow*base;
   return pow;
}
